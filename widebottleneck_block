	C [label=BatchNorm fillcolor=lightgray shape=box style=filled]
	D [label=GELU fillcolor=lightgreen shape=box style=filled]
	E [label="WideBottleneck
(widen_factor=2)" fillcolor=lightblue shape=box style=filled]
	F [label="Conv2D
(1 × 1)" fillcolor=lightblue shape=box style=filled]
	G [label=BatchNorm fillcolor=lightgray shape=box style=filled]
	H [label="+" fillcolor=white shape=circle style=filled]
	I [label="Attention
(e.g., Spectral/Coordinate)" fillcolor=lightcoral shape=box style=filled]
	J [label=Dropout fillcolor=lightyellow shape=box style=filled]
	K [label=Output fillcolor=lightgray shape=box style=filled]
	A -> B
	B -> C
	C -> D
	D -> E
	E -> H
	A -> F
	F -> G
	G -> H
	H -> I
	I -> J
	J -> K
	fontsize=20 label="WideBottleneck Block (K=3, S=1/2)"
