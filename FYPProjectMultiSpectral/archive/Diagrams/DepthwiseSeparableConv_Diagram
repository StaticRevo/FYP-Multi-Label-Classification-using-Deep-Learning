	edge [arrowsize=0.8 color="#555555"]
	DSC_Input [label="Input
[B, in_channels, H, W]" fillcolor="#b3d9ff"]
	DSC_Depthwise [label="Conv2d
in_channels -> in_channels
kernel_size=kernel_size, stride=stride
padding=padding, dilation=dilation
groups=in_channels, bias, padding_mode
[B, in_channels, H', W']" fillcolor="#b3d9ff"]
	DSC_Pointwise [label="Conv2d
in_channels -> out_channels
kernel_size=1, stride=1, padding=0
dilation=dilation, groups=1
bias, padding_mode
[B, out_channels, H', W']" fillcolor="#b3d9ff"]
	DSC_Skip_Dummy [label="" shape=point style=invisible width=0.01]
	DSC_Downsample [label="Downsample (optional)
Conv2d
in_channels -> out_channels
kernel_size=1, stride=stride, bias=False
BatchNorm2d
[B, out_channels, H', W']" fillcolor="#b3d9ff" style="filled,dashed"]
	DSC_Add [label="+
Residual
[out_channels]" fillcolor="#ffcccc" fixedsize=false fontsize=12 shape=circle width=0.7]
	DSC_Input -> DSC_Depthwise
	DSC_Depthwise -> DSC_Pointwise
	DSC_Pointwise -> DSC_Add
	DSC_Input -> DSC_Skip_Dummy [color="#ff3333" constraint=false penwidth=2 style=dashed]
	DSC_Skip_Dummy -> DSC_Downsample [color="#ff3333" constraint=false penwidth=2 style=dashed]
	DSC_Downsample -> DSC_Add [label="Residual Connection" color="#ff3333" penwidth=2 style=dashed]
